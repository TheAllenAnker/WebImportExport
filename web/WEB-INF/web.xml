<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.allen_anker.servlet.IndexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImportExcelInitServlet</servlet-name>
        <servlet-class>com.allen_anker.servlet.ImportExcelInitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImportExcelServlet</servlet-name>
        <servlet-class>com.allen_anker.servlet.ImportExcelServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExportExcelInitServlet</servlet-name>
        <servlet-class>com.allen_anker.servlet.ExportExcelInitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExportExcelServlet</servlet-name>
        <servlet-class>com.allen_anker.servlet.ExportExcelServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExportWordInitServlet</servlet-name>
        <servlet-class>com.allen_anker.servlet.ExportWordInitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExportWordServlet</servlet-name>
        <servlet-class>com.allen_anker.servlet.ExportWordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImportWordInitServlet</servlet-name>
        <servlet-class>com.allen_anker.servlet.ImportWordInitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ImportWordServlet</servlet-name>
        <servlet-class>com.allen_anker.servlet.ImportWordServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImportExcelInitServlet</servlet-name>
        <url-pattern>/importExcelInit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImportExcelServlet</servlet-name>
        <url-pattern>/importExcel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExportExcelInitServlet</servlet-name>
        <url-pattern>/exportExcelInit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExportExcelServlet</servlet-name>
        <url-pattern>/exportExcel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExportWordInitServlet</servlet-name>
        <url-pattern>/exportWordInit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExportWordServlet</servlet-name>
        <url-pattern>/exportWord</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImportWordInitServlet</servlet-name>
        <url-pattern>/importWordInit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImportWordServlet</servlet-name>
        <url-pattern>/importWord</url-pattern>
    </servlet-mapping>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-preclude>/WEB-INF/jsp/commons.jsp</include-preclude>
        </jsp-property-group>
    </jsp-config>
</web-app>